<div class="broker-sidebar">
  <div class="avatar">
    <% if (broker.photo_url) { %>
      <img src="<%= broker.photo_url %>" alt="<%= broker.name %>">
    <% } else { %>
      <img src="/assets/avatar_placeholder.png" alt="avatar">
    <% } %>
  </div>
  <% const firstName = broker.name.split(' ')[0]; %>
  <h3><%= firstName %></h3>
  <nav>
    <ul>
      <li><a href="/brokers/<%= broker.id %>" class="<%= active==='profile' ? 'active' : '' %>">Corretor</a></li>
      <li><a href="/brokers/<%= broker.id %>/agenda" class="<%= active==='agenda' ? 'active' : '' %>">Agenda</a></li>
      <li><a href="/brokers/<%= broker.id %>/properties" class="<%= active==='properties' ? 'active' : '' %>">Im√≥veis</a></li>
      <li><a href="/brokers/<%= broker.id %>/visits" class="<%= active==='visits' ? 'active' : '' %>">Visitas</a></li>
    </ul>
  </nav>
  <div class="broker-logout">
    <a href="/logout">Logout</a>
  </div>
</div> 