<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Perfil do Corretor <%= broker.name %></title>
  <style>
    table { border-collapse: collapse; }
    th, td { padding: .4rem .8rem; border: 1px solid #666; }
  </style>
</head>
<body>
  <h1>Perfil do Corretor</h1>
  <ul>
    <li><strong>ID:</strong> <%= broker.id %></li>
    <li><strong>Nome:</strong> <%= broker.name %></li>
    <li><strong>Email:</strong> <%= broker.email %></li>
    <li><strong>Telefone:</strong> <%= broker.phone %></li>
    <li><strong>CRECI:</strong> <%= broker.creci %></li>
  </ul>

  <h2>Visitas Agendadas</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Imóvel</th>
        <th>Cliente</th>
        <th>Início</th>
        <th>Fim</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% if (visits.length === 0) { %>
        <tr><td colspan="6">Nenhuma visita agendada.</td></tr>
      <% } %>
      <% visits.forEach(v => { %>
        <tr>
          <td><%= v.id %></td>
          <td><%= v.property_address %></td>
          <td><%= v.client_name %></td>
          <td><%= v.starts_at.toLocaleString('pt-BR') %></td>
          <td><%= v.ends_at.toLocaleString('pt-BR') %></td>
          <td><%= v.status %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
