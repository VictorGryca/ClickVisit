<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Agências Cadastradas</title>
  <style>
    table { border-collapse: collapse; }
    th, td { padding:.4rem .8rem; border:1px solid #666; }
    form.inline { display:inline; margin:0 .2rem; }
  </style>
</head>
<body>

  <h1>Agências Cadastradas</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% agencies.forEach(a => { %>
        <tr>
          <td><%= a.id %></td>
          <td><%= a.name %></td>
          <td>
            <!-- BOTÃO PROPERTIES -->
            <a href="/agencies/<%= a.id %>/properties">
              <button type="button">Propriedades</button>
            </a>

            <!-- EXCLUIR -->
            <form class="inline" action="/agencies/delete/<%= a.id %>" method="POST">
              <button type="submit">Deletar</button>
            </form>

            <!-- EDITAR -->
            <form class="inline" action="/agencies/edit/<%= a.id %>" method="POST">
              <input name="name" placeholder="Novo nome" required>
              <button type="submit">Editar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- NOVA AGÊNCIA -->
  <h2>Cadastrar Nova Agência</h2>
  <form action="/agencies" method="POST">
    <input name="name" placeholder="Nome da agência" required>
    <button type="submit">Adicionar</button>
  </form>

</body>
</html>
